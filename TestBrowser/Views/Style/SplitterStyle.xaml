<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:vs="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.12.0">
	
	<Style x:Key="RowSplitterStyle" TargetType="{x:Type GridSplitter}">
		<Setter Property="Width" Value="Auto"></Setter>
		<Setter Property="Height" Value="5"></Setter>
		<Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
		<Setter Property="Background" Value="{DynamicResource {x:Static vs:VsBrushes.EnvironmentBackgroundKey}}"></Setter>
	</Style>
	
</ResourceDictionary>